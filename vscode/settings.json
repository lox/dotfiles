{
  // General settings
  "window.zoomLevel": 1,
  "workbench.startupEditor": "newUntitledFile",
  "editor.fontFamily": "Source Code Pro",
  "editor.renderWhitespace": "all",
  "editor.fontLigatures": true,
  "editor.minimap.enabled": false,
  "workbench.editor.enablePreview": false,
  "workbench.colorTheme": "Nord",
  "window.nativeTabs": true,

  // https://github.com/Microsoft/vscode-go/issues/1613
  "editor.formatOnSaveTimeout": 10000,

  // Disable git integration
  "git.enabled": false,
  "git.path": null,
  "git.autofetch": false,

  // Custom file associations
  "files.associations": {
    "*.bats": "shellscript",
    "*.erb": "markdown"
  },

  // golang settings
  "[go]": {
    "editor.tabSize": 4
  },

//   // https://github.com/Microsoft/vscode-go/wiki/Go-modules-support-in-Visual-Studio-Code
//   "go.alternateTools": {
//     "go-langserver": "bingo",
//   },
//   "go.languageServerExperimentalFeatures": {
//     "format": true,
//     "autoComplete": true
//   },
//   "go.useLanguageServer": true,

  "go.lintTool":"golangci-lint",
  "go.lintFlags": [
    "--fast"
  ],

  "go.testFlags": ["-v", "-race", "-p=1", "-failfast"],
  "go.formatTool": "goimports",

  // cloudformation settings
  "indenticator.inner.showHighlight": true,

  // https://github.com/redhat-developer/yaml-language-server/issues/77
  "yaml.validate": false,

  // shellscript settings
  // "shellformat.path": "/Users/lachlan/go/bin/shfmt",

  // docker settings
  "docker.showExplorer": false,
  "go.useLanguageServer": true,

  // ruby settings
  // "ruby.useBundler": true,
  // "ruby.intellisense": "rubyLocate",
  // "ruby.lintDebounceTime": 300,
  // "ruby.lint": {
  //   "ruby": {
  //     "unicode": true //Runs ruby -wc -Ku
  //   },
  //   "rubocop": {
  //     "lint": true,
  //     "rails": true
  //   }
  // },
}
