{
  // Enable ESLint formatting
  "eslint.format.enable": true,

  // JavaScript specific settings
  "[javascript]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    },
    "editor.defaultFormatter": "vscode.typescript-language-features",
    "editor.formatOnType": false, // required
    "editor.formatOnPaste": true, // optional
    "editor.formatOnSave": true, // optional
    "editor.formatOnSaveMode": "file", // required to format on save
  },

  "files.autoSave": "onFocusChange", // optional but recommended
  "vs-code-prettier-eslint.prettierLast": false, // set as "true" to run 'prettier' last not first

  // Terraform specific settings
  // https://marketplace.visualstudio.com/items?itemName=HashiCorp.terraform
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform",
    "editor.codeActionsOnSave": {
      "source.formatAll.terraform": "explicit"
    }
  },
  // Terraform experimental features: validate on save
  // https://marketplace.visualstudio.com/items?itemName=HashiCorp.terraform
  "terraform.experimentalFeatures.validateOnSave": false,
  // Terraform variables specific settings
  "[terraform-vars]": {
    "editor.defaultFormatter": "hashicorp.terraform",
    "editor.codeActionsOnSave": {
      "source.formatAll.terraform": "explicit"
    }
  },
  "go.toolsManagement.autoUpdate": true,
  // Disable Telemetry settings for Red Hat extensions (YAML)
  "redhat.telemetry.enabled": false,
  "editor.inlineSuggest.enabled": true,
  "editor.accessibilitySupport": "off",
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "terminal.integrated.environmentChangesIndicator": "on",
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.inheritEnv": false,
  "liveshare.allowGuestDebugControl": true,
  "liveshare.allowGuestTaskControl": true,
  "liveshare.diagnosticLogging": true,
  "js/ts.implicitProjectConfig.checkJs": true,
  "workbench.colorTheme": "Default Dark+",
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "window.zoomLevel": 1,
  "editor.fontFamily": "'SauceCodePro Nerd Font Mono', 'Courier New', monospace",
  "terminal.integrated.fontFamily": "'SauceCodePro Nerd Font Mono'",
  "[terraform][terraform-vars]": {
    "editor.codeActionsOnSave": {
      "source.formatAll.terraform": "explicit"
    }
  },
  "cursor.cpp.disabledLanguages": [
    "plaintext",
    "scminput"
  ],
  "terminal.integrated.enablePersistentSessions": false,
  "go.terminal.activateEnvironment": false,
  "python.terminal.activateEnvironment": false,
  "terminal.integrated.env.osx": {
      "ACTIVE_HERMIT": null,
      "HERMIT_ENV": null,
      "HERMIT_ENV_OPS": null,
      "HERMIT_BIN": null
  },
}
